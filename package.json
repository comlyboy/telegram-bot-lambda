{
	"name": "telegram-bot-lambda",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"serverless-prebuild": "npm run prebuild && rimraf .serverless && rimraf .webpack",
		"serverless-start:dev": "sls package --stage development && sls offline",
		"serverless-build:staging": "npm run build && sls package --stage staging --verbose",
		"serverless-build:production": "npm run build && sls package --stage production --verbose",
		"serverless-deploy:staging": "npm run build && sls deploy --stage staging --verbose",
		"serverless-deploy:production": "npm run build && sls deploy --stage production --verbose",
		"serverless-remove:staging": "sls remove --stage staging --verbose",
		"serverless-remove:production": "sls remove --stage production --verbose"
	},
	"dependencies": {
		"@nestjs/cache-manager": "^2.2.2",
		"@nestjs/common": "^10.3.8",
		"@nestjs/core": "^10.3.8",
		"@nestjs/platform-express": "^10.3.8",
		"@vendia/serverless-express": "^4.12.6",
		"cache-manager": "^5.5.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"dotenv": "^16.4.5",
		"grammy": "^1.26.0",
		"helmet": "^7.1.0",
		"morgan": "^1.10.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.3.2",
		"@nestjs/schematics": "^10.1.1",
		"@nestjs/testing": "^10.3.8",
		"@types/aws-lambda": "^8.10.138",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.12.12",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^7.9.0",
		"@typescript-eslint/parser": "^7.9.0",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"jest": "^29.7.0",
		"prettier": "^3.2.5",
		"serverless-deployment-bucket": "^1.6.0",
		"serverless-dotenv-plugin": "^6.0.0",
		"serverless-prune-plugin": "^2.0.2",
		"serverless-webpack": "^5.14.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"terser-webpack-plugin": "^5.3.10",
		"ts-jest": "^29.1.2",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsconfig-paths-webpack-plugin": "^4.1.0",
		"typescript": "^5.4.5",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4",
		"webpack-merge": "^5.10.0",
		"webpack-node-externals": "^3.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
